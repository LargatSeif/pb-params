{
  "name": "pb-params",
  "version": "0.2.1",
  "type": "module",
  "description": "Type-safe PocketBase query parameters builder with pocketbase-typegen integration",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src tests --ext .ts,.tsx --fix",
    "lint:check": "eslint src tests --ext .ts,.tsx",
    "test": "vitest run --typecheck",
    "test:watch": "vitest --typecheck",
    "test:ui": "vitest --ui --typecheck",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "pnpm run build",
    "check:all": "pnpm run test && pnpm build && pnpm run lint:check && pnpm run typecheck",
    "dry:run": "npm pack --dry-run"
  },
  "keywords": [
    "pocketbase",
    "pocketbase-js",
    "pocketbase-ts",
    "pocketbase-typegen",
    "query",
    "builder",
    "querybuilder",
    "parameters",
    "typescript",
    "ts"
  ],
  "author": "Seifeddine Largat",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LargatSeif/pb-params.git"
  },
  "bugs": {
    "url": "https://github.com/LargatSeif/pb-params/issues"
  },
  "homepage": "https://github.com/LargatSeif/pb-params#readme"
}